{
  "name": "send-telegram-bot",
  "type": "module",
  "version": "1.0.0",
  "description": "Telegram bot for generating Send app links",
  "main": "src/Index.res.js",
  "scripts": {
    "start": "node src/Index.res.js",
    "build": "rescript build",
    "dev": "rescript build && node src/Index.res.js",
    "dev:watch": "nodemon --exec \"rescript build && node src/Index.res.js\" --watch src --ext res",
    "res:build": "rescript build",
    "res:dev": "rescript build -w",
    "res:format": "rescript format",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^16.4.1",
    "telegraf": "^4.15.3",
    "telegraf-ratelimit": "^2.0.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "nodemon": "^3.0.3",
    "rescript": "12.0.0-beta.6"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
